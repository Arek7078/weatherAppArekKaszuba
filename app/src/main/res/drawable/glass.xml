<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Kolor tła: Półprzezroczysta biel. Możesz eksperymentować z wartością alpha (pierwsze dwie cyfry). -->
    <!-- #40FFFFFF -> ok. 25% przezroczystości. #80FFFFFF -> 50% przezroczystości -->
    <solid android:color="#40FFFFFF" />

    <!-- Obramowanie: Delikatna, również półprzezroczysta biała linia, aby zasymulować krawędź szkła -->
    <stroke
        android:width="1dp"
        android:color="#66FFFFFF" />

    <!-- Zaokrąglone rogi: Niezbędne dla efektu "szklanej karty" -->
    <corners android:radius="16dp" />

</shape>
